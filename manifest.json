{
  "manifest_version": 3,
  "name": "Archive Redirect",
  "version": "1.0",
  "description": "Redirects to the most recent snapshot of the current page on archive.is",
  "permissions": ["activeTab"],
  "host_permissions": ["https://archive.is/*"],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}